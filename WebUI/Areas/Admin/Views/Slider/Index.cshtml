@model IEnumerable<Slider>
@* <a href="/admin/slider/create" class="btn btn-dark">Create</a> *@
<a asp-area="Admin" asp-controller="Slider" asp-action="Create" class="btn btn-dark">Create</a>
<!--Area/Con/ACt-->


<table class="table table-dark table-bordered table-hover table-striped">
    <thead>
        <tr>
            <td>#</td>
            <td>Title</td>
            <td>SubTitle</td>
            <td>Image</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>
                    <img src="@item.PhotoUrl" alt="" width="200" />
                </td>
                <td>
                    <a href="/admin/slider/edit/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/admin/slider/delete/@item.Id" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>