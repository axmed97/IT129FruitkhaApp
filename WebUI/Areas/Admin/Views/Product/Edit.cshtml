@model Product

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discount"></label>
        <input type="number" asp-for="Discount" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Count"></label>
        <input type="number" asp-for="Count" min="0" class="form-control" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select class="form-control" asp-for="CategoryId">
            @foreach (var item in ViewBag.Categories as List<Category>)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <img src="@Model.PhotoUrl" width="200" alt="" />
    </div>
    <div class="form-group my-4">
        <input type="file" action="image/*" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-dark">Create</button>
</form>